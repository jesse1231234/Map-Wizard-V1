# App
APP_URL=https://your-vercel-domain.vercel.app
APP_SECRET=replace-with-a-long-random-string
OPENAI_API_KEY=replace-me

# Postgres (serverless-safe pooled URL)
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DB?sslmode=require

# Postgres direct URL (for migrations; not used at runtime if your provider requires it)
DIRECT_URL=postgresql://USER:PASSWORD@HOST:5432/DB?sslmode=require

# SMTP (magic links)
EMAIL_FROM="Course Map Wizard <no-reply@yourdomain.com>"
SMTP_HOST=smtp.yourprovider.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password

# S3 / R2 / MinIO
S3_REGION=us-east-1
S3_BUCKET=cmw-uploads
S3_ACCESS_KEY_ID=replace
S3_SECRET_ACCESS_KEY=replace

# Optional for Cloudflare R2 / MinIO
S3_ENDPOINT=
S3_FORCE_PATH_STYLE=false

# Optional: if true, submitting a passing step will advance session.stepId to the next step
AUTO_ADVANCE_ON_PASS=false
